<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.damian.astronomiapam.WeatherFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherIconImageView"
        android:src="@drawable/icon_na"
        android:contentDescription="@string/condition_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/windSpeedTextView"
        android:layout_width="165dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.511" />
    <TextView
        android:id="@+id/windDirectionTextView"
        android:layout_width="165dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/windSpeedTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageView"
        android:layout_marginLeft="8dp"
        tools:layout_editor_absoluteX="152dp" />
    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="165dp"
        android:layout_height="21dp"
        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/windDirectionTextView" />
    <TextView
        android:id="@+id/visibilityTextView"
        android:layout_width="166dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/humidityTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageView"
        android:layout_marginLeft="8dp"
        tools:layout_editor_absoluteY="103dp" />

</android.support.constraint.ConstraintLayout>